<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.AndroidKickstart" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_androidbootstrap</item>
        <item name="popupMenuStyle">@style/PopupMenu.Androidbootstrap</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Androidbootstrap</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Androidbootstrap</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Androidbootstrap</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Androidbootstrap</item>
        <item name="actionModeBackground">@drawable/cab_background_top_androidbootstrap</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_androidbootstrap</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Androidbootstrap</item>
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>

    <style name="Widget">
        <item name="android:background">#d6d6d6</item>
    </style>
    
    

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vpi__light_theme</item>
    </style>

    <style name="Widget.IconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="ActionBar.Solid.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_androidbootstrap</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_androidbootstrap</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_androidbootstrap</item>
        <item name="progressBarStyle">@style/ProgressBar.Androidbootstrap</item>
    </style>

    <style name="ActionBar.Transparent.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_androidbootstrap</item>
        <item name="progressBarStyle">@style/ProgressBar.Androidbootstrap</item>
    </style>
	
    <style name="PopupMenu.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_androidbootstrap</item>	
    </style>
	
    <style name="DropDownListView.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_androidbootstrap</item>
    </style>

    <style name="ActionBarTabStyle.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_androidbootstrap</item>
    </style>
	
    <style name="DropDownNav.Androidbootstrap" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_androidbootstrap</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_androidbootstrap</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_androidbootstrap</item>
    </style>
    
    <style name="ProgressBar.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_androidbootstrap</item>
    </style>
    
    <style name="ActionButton.CloseMode.Androidbootstrap" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_androidbootstrap</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Androidbootstrap.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Androidbootstrap</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Androidbootstrap</item>
    </style>

</resources>